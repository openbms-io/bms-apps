{
  "name": "bms-supervisor-controller",
  "version": "0.1.0",
  "description": "BMS Supervisor Controller - Visual programming platform for building management systems",
  "license": "AGPL-3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/setup-python-venvs.js",
    "python:setup": "node scripts/setup-python-venvs.js",
    "python:clean": "rm -rf apps/bms-iot-app/.venv apps/building-semantics-api-app/.venv",
    "dev": "./scripts/start-dev.sh",
    "build": "pnpm --recursive run build",
    "test": "jest && pnpm --filter designer test && pnpm bms-iot:test",
    "test:js": "jest && pnpm --filter designer test",
    "test:python": "pnpm bms-iot:test && pnpm mqtt-topics:test",
    "lint": "pnpm --recursive run lint",
    "clean": "pnpm --recursive run clean",
    "format": "pnpm --recursive run format",
    "format:check": "pnpm --recursive run format:check",
    "bms-iot:install": "cd apps/bms-iot-app && .venv/bin/pip install -e '.[test]'",
    "bms-iot:help": "PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m src.cli --help",
    "bms-iot:run": "PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m src.cli run-main",
    "bms-iot:test": "PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m pytest apps/bms-iot-app/tests/unit/ && PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m pytest apps/bms-iot-app/tests/integration/ --isolate",
    "bms-iot:test:verbose": "PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m pytest apps/bms-iot-app/tests/unit/ -v && PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m pytest apps/bms-iot-app/tests/integration/ --isolate -v",
    "bms-iot:mqtt": "PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m src.cli mqtt",
    "bms-iot:config": "PYTHONPATH=.:apps/bms-iot-app apps/bms-iot-app/.venv/bin/python -m src.cli config",
    "mqtt-topics:test": "cd packages/mqtt_topics && python -m pytest tests/ -v",
    "building-semantics:install": "cd apps/building-semantics-api-app && .venv/bin/pip install -e '.[test,dev]'",
    "building-semantics:run": "ROOT_PATH=/building-semantics PYTHONPATH=.:apps/building-semantics-api-app apps/building-semantics-api-app/.venv/bin/python -m uvicorn src.main:app --reload --port 8000",
    "building-semantics:test": "PYTHONPATH=.:apps/building-semantics-api-app apps/building-semantics-api-app/.venv/bin/pytest apps/building-semantics-api-app/tests/",
    "building-semantics:test:verbose": "PYTHONPATH=.:apps/building-semantics-api-app apps/building-semantics-api-app/.venv/bin/pytest apps/building-semantics-api-app/tests/ -v -s",
    "building-semantics:typecheck": "PYTHONPATH=.:apps/building-semantics-api-app apps/building-semantics-api-app/.venv/bin/mypy apps/building-semantics-api-app/src/",
    "building-semantics:lint": "apps/building-semantics-api-app/.venv/bin/ruff check apps/building-semantics-api-app/src/",
    "building-semantics:format": "apps/building-semantics-api-app/.venv/bin/black apps/building-semantics-api-app/src/ apps/building-semantics-api-app/tests/",
    "setup:hooks": "python -m pip install pre-commit && pre-commit install",
    "hooks:update": "pre-commit autoupdate",
    "hooks:run": "pre-commit run --all-files"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "jest": "^30.1.3",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
